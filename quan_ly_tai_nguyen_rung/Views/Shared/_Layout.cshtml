<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - quan_ly_tai_nguyen_rung</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/quan_ly_tai_nguyen_rung.styles.css" asp-append-version="true" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
            margin: 0;
        }

        .wrapper {
            flex: 1;
            display: flex;
            flex-direction: row;
        }

        .sidebar {
            height: 100vh;
            position: sticky;
            top: 0;
            width: 250px;
            background-color: #f8f9fa;
            border-right: 1px solid #ddd;
            overflow-y: auto;
            padding: 1rem;
        }

        .content {
            flex: 1;
            padding: 1.5rem;
        }

        .footer {
            background-color: #f8f9fa;
            border-top: 1px solid #ddd;
            padding: 1rem 0;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Quản lý tài nguyên rừng</a>
            </div>
        </nav>
    </header>

    <div class="wrapper">
        <!-- Sidebar -->
        <aside class="sidebar">
            <nav>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle" href="#" id="bioResourcesDropdown" data-bs-toggle="collapse" data-bs-target="#bioResourcesSubmenu" aria-expanded="false" aria-controls="bioResourcesSubmenu">
                            Tài nguyên sinh vật
                        </a>
                        <ul class="collapse list-unstyled ms-3" id="bioResourcesSubmenu">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Animal" asp-action="Index">Động vật</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="AnimalFacility" asp-action="Index">Cơ sở lưu trữ động vật</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="AnimalAnimalFacility" asp-action="Index">Liên kết cơ sở với động vật</a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="WoodProcessingFacilities" asp-action="Index">WoodProcessingFacilities</a>
                    </li>
                </ul>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="content">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - quan_ly_tai_nguyen_rung - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
