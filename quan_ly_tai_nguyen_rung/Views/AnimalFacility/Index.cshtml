@model IEnumerable<quan_ly_tai_nguyen_rung.Models.section4.AnimalFacility>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        @using (Html.BeginForm("SearchByName", "AnimalFacility", FormMethod.Get))

        {
            <div class="row mb-4">
                <div class="col-md-8">
                    <input type="text" name="name" class="form-control" placeholder="Nhập tên cơ sở lưu trữ" value="@ViewContext.HttpContext.Request.Query["name"]" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                </div>
            </div>
        }

        <a asp-controller="AnimalFacility" asp-action="Create" class="btn btn-sm btn-success mb-3">Create</a>

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th scope="col">Tên Cơ Sở</th>
                    <th scope="col">Diện Tích</th>
                    <th scope="col">Địa Chỉ</th>
                    <th scope="col">Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())

                {
                    int index = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@item.Name</td>
                            <td>@item.Acreage</td>
                            <td>@item.Address</td>
                            <td>
                                <a asp-controller="AnimalFacility" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-controller="AnimalFacility" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                <a asp-controller="AnimalFacility" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-primary">View</a>
                            </td>
                        </tr>
                        index++;
                    }

                }

                else

                {
                    <tr>
                        <td colspan="5" class="text-center">Không có dữ liệu</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
